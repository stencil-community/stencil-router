{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "outDir": "build",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2019",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
